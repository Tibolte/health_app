# PostgreSQL connection string used by Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/health_app"

# PostgreSQL container credentials (used by docker-compose.yml)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=health_app

# Intervals.icu API (get from Settings > Developer Settings)
INTERVALS_API_KEY=your_api_key_here
INTERVALS_ATHLETE_ID=i000000

# API authentication (generate with: openssl rand -hex 32)
API_SECRET_KEY=your_64_char_hex_secret_here

# CORS allowed origins (comma-separated, for mobile web views if needed)
ALLOWED_ORIGINS=http://localhost:3000
